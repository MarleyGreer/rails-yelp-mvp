<div class="container">
  <h1>Add Your Restaurant To Yelp!</h1>
  <%= simple_form_for @restaurant do |f| %>
    <%= f.input :name, label: 'Restaurant Name', error: 'Restaurant name is mandatory, please specify one' %>
    <%= f.input :address, label: 'Address' %>
    <%= f.input :phone_number, label: 'Phone Number' %>
    <%= f.input :category, collection: ['chinese', 'italian', 'japanese', 'french', 'belgian'] %>
    <%= f.button :submit, class: "btn-dark"%>

  <% end %>
</div>

