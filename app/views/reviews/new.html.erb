<div class="container">
  <h1>Write A New Review About <%= @restaurant.name %>!</h1>
  <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :content, label: 'Write Your Review', error: 'Review Cannot Be Blank!' %>
    <%= f.input :rating, collection: [0, 1, 2, 3, 4, 5] %>
    <%= f.button :submit, class: "btn-dark"%>
  <% end %>
</div>
